// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Node {
  id         String   @id @default(cuid())
  type       String
  label      String
  position   Position @relation(fields: [positionId], references: [id])
  positionId String   @unique
  sourceFor  Edge[]   @relation("SourceEdges")
  targetFor  Edge[]   @relation("TargetEdges")
}

model Position {
  id   String @id @default(cuid())
  x    Float
  y    Float
  node Node?
}

model Edge {
  id       String @id @default(cuid())
  sourceId String
  targetId String
  source   Node   @relation("SourceEdges", fields: [sourceId], references: [id])
  target   Node   @relation("TargetEdges", fields: [targetId], references: [id])
}
